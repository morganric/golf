<h1>Listing tees</h1>

<table>
  <thead>
    <tr>
      <th>Colour</th>
      <th>Par</th>
      <th>Length</th>
      <th>Hole</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tees.each do |tee| %>
      <tr>
        <td><%= tee.colour %></td>
        <td><%= tee.par %></td>
        <td><%= tee.length %></td>
        <td><%= tee.hole_id %></td>
        <td><%= link_to 'Show', tee %></td>
        <td><%= link_to 'Edit', edit_tee_path(tee) %></td>
        <td><%= link_to 'Destroy', tee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tee', new_tee_path %>
